<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="zyppys.com.customer.onboarding.SignupFragment"
              android:background="@drawable/background">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ImageView
        android:id="@+id/logo_zippys"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/zyppys" />

    <RelativeLayout
        android:id="@+id/phone_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/selector_edit_text_bg">

        <FrameLayout
            android:id="@+id/phone_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/phone_icon"
                android:background="@drawable/selector_phone"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/phone_no"
            android:layout_toRightOf="@+id/phone_icon_container"
            android:layout_toLeftOf="@+id/phone_clear"
            android:layout_toStartOf="@+id/phone_clear"
            android:layout_toEndOf="@+id/phone_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:hint="@string/phone_number"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:layout_height="@dimen/dimen_52dp"
            android:maxLength="10"/>

        <ImageView
            android:id="@+id/phone_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/selector_edit_text_bg">

        <FrameLayout
            android:id="@+id/name_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/name_icon"
                android:background="@drawable/selector_name"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/name"
            android:layout_toRightOf="@+id/name_icon_container"
            android:layout_toLeftOf="@+id/name_clear"
            android:layout_toStartOf="@+id/name_clear"
            android:layout_toEndOf="@+id/name_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:hint="@string/name"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_height="@dimen/dimen_52dp"/>

        <ImageView
            android:id="@+id/name_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/selector_edit_text_bg">

        <FrameLayout
            android:id="@+id/email_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/email_icon"
                android:background="@drawable/selector_email"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/email"
            android:layout_toRightOf="@+id/email_icon_container"
            android:layout_toLeftOf="@+id/email_clear"
            android:layout_toStartOf="@+id/email_clear"
            android:layout_toEndOf="@+id/email_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:hint="@string/email_address"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_height="@dimen/dimen_52dp"/>

        <ImageView
            android:id="@+id/email_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/referral_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@drawable/selector_edit_text_bg">

        <FrameLayout
            android:id="@+id/referral_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/referral_icon"
                android:background="@drawable/selector_referral"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/referral"
            android:layout_toRightOf="@+id/referral_icon_container"
            android:layout_toLeftOf="@+id/referral_clear"
            android:layout_toStartOf="@+id/referral_clear"
            android:layout_toEndOf="@+id/referral_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:hint="@string/referral_code_if_any"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_height="@dimen/dimen_52dp"
            android:maxLength="10"/>

        <ImageView
            android:id="@+id/referral_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_terms_conditions"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_conditions"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:autoLink="all"
        android:buttonTint="@color/white"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingStart="@dimen/dimen_8dp"
        android:layout_marginTop="@dimen/dimen_8dp"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:background="@drawable/drawable_button_white"
        android:text="@string/sign_up"
        android:textColor="@color/text_dark"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_64dp"
        android:layout_marginRight="@dimen/dimen_64dp"/>

    <ImageView
        android:id="@+id/close_img"
        android:src="@drawable/close"
        android:layout_weight="1"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="0dp"
        android:gravity="center|bottom"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
