<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zyppys.com.customer.landing.LandingActivity"
    tools:showIn="@layout/app_bar_landing">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_1dp"
                android:layout_marginRight="@dimen/dimen_0_5dp"
                android:layout_marginEnd="@dimen/dimen_0_5dp"
                android:layout_marginBottom="@dimen/dimen_0_5dp"
                android:background="@color/banner_bg_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:clickable="false"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:drawableLeft="@drawable/car_icon"
                android:drawableStart="@drawable/car_icon"
                android:text="@string/cars"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_0_5dp"
                android:layout_marginEnd="@dimen/dimen_0_5dp"
                android:layout_marginBottom="@dimen/dimen_0_5dp"
                android:background="@color/banner_bg_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:drawableLeft="@drawable/hotel_icon"
                    android:drawableStart="@drawable/hotel_icon"
                    android:text="@string/hotels_rooms"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_1dp"
                android:layout_marginRight="@dimen/dimen_0_5dp"
                android:layout_marginEnd="@dimen/dimen_0_5dp"
                android:layout_marginBottom="@dimen/dimen_0_5dp"
                android:background="@color/banner_bg_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:drawableLeft="@drawable/package_icon"
                    android:drawableStart="@drawable/package_icon"
                    android:text="@string/packages"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_48dp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dimen_1dp"
                android:layout_marginStart="@dimen/dimen_1dp"
                android:layout_marginLeft="@dimen/dimen_0_5dp"
                android:layout_marginEnd="@dimen/dimen_0_5dp"
                android:layout_marginBottom="@dimen/dimen_0_5dp"
                android:background="@color/banner_bg_color">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:clickable="false"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:drawableLeft="@drawable/carpool_icon"
                    android:drawableStart="@drawable/carpool_icon"
                    android:text="@string/carpool"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
