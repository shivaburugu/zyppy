<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text_dark"
    tools:context="zyppys.com.customer.MoreInfoActivity">

    <RelativeLayout
        android:background="@color/banner_bg_color"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/white"
            android:text="Traveller Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/done"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:background="@drawable/selector_text_box_bg">

        <FrameLayout
            android:id="@+id/name_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/name_icon"
                android:background="@drawable/selector_name"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/name"
            android:layout_toRightOf="@+id/name_icon_container"
            android:layout_toLeftOf="@+id/name_clear"
            android:layout_toStartOf="@+id/name_clear"
            android:layout_toEndOf="@+id/name_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:hint="@string/name"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_height="@dimen/dimen_52dp"/>

        <ImageView
            android:id="@+id/name_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/selector_text_box_bg">

        <FrameLayout
            android:id="@+id/email_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/email_icon"
                android:background="@drawable/selector_email"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/email"
            android:layout_toRightOf="@+id/email_icon_container"
            android:layout_toLeftOf="@+id/email_clear"
            android:layout_toStartOf="@+id/email_clear"
            android:layout_toEndOf="@+id/email_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionNext"
            android:hint="@string/email_address"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_height="@dimen/dimen_52dp"/>

        <ImageView
            android:id="@+id/email_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginLeft="@dimen/dimen_52dp"
        android:layout_marginRight="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@drawable/selector_text_box_bg">

        <FrameLayout
            android:id="@+id/phone_icon_container"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/phone_icon"
                android:background="@drawable/selector_phone"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:id="@+id/phone_no"
            android:layout_toRightOf="@+id/phone_icon_container"
            android:layout_toLeftOf="@+id/phone_clear"
            android:layout_toStartOf="@+id/phone_clear"
            android:layout_toEndOf="@+id/phone_icon_container"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingEnd="@dimen/dimen_8dp"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:hint="@string/phone_number"
            android:background="@color/transparent"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:layout_height="@dimen/dimen_52dp"
            android:maxLength="10"/>

        <ImageView
            android:id="@+id/phone_clear"
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_12dp"
            android:src="@drawable/close"
            android:background="@color/background_dark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>
